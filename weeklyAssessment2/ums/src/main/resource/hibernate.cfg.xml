<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-configuration PUBLIC
        "-//Hibernate/Hibernate Configuration DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-configuration-3.0.dtd">

<hibernate-configuration>
    <session-factory>

        <!-- Database Connection Settings -->
        <property name="hibernate.connection.driver_class">org.postgresql.Driver</property>
        <property name="hibernate.connection.url">jdbc:postgresql://localhost:5432/ums</property>
        <property name="hibernate.connection.username">postgres</property>
        <property name="hibernate.connection.password">yash2004</property>

        <!-- PostgreSQL Dialect -->
        <property name="hibernate.dialect">org.hibernate.dialect.PostgreSQLDialect</property>

        <!-- Hibernate Behavior -->
        <property name="hibernate.show_sql">false</property>
        <property name="hibernate.format_sql">true</property>
        <property name="hibernate.hbm2ddl.auto">update</property>

        <!-- Register Entity -->       	
       	<mapping class="com.cap.entity.Students"/>
       	<mapping class="com.cap.entity.Courses"/>
       	<mapping class="com.cap.entity.Departments"/>
       	<mapping class="com.cap.entity.Student_Id_Cards"/>
       	

    </session-factory>
</hibernate-configuration>